<Window x:Class="QCS.PopUp"
        Name="PopUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QCS"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        ShowInTaskbar="False"
        Topmost="True"> 
    <Border Name="Border" Background="#FDFFFFFF" BorderBrush="Black" BorderThickness="1,1,1,1" CornerRadius="10,10,10,10">
        <Grid>
            <Label Name="PopUpLabel" Background="Transparent" Content="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black" Margin="5,2"/>
        </Grid>
    </Border>
</Window>
